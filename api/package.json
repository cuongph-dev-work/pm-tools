{
  "name": "pm-tools-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "type": "commonjs",
  "license": "UNLICENSED",
  "engines": {
    "node": "22.14.0",
    "pnpm": ">=10.7.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start -b swc",
    "start:dev": "nest start -b swc -w",
    "start:debug": "nest start -b swc --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "mikro-orm migration:create --config ./src/configs/mikro-orm.config.ts",
    "migration:up": "mikro-orm migration:up --config ./src/configs/mikro-orm.config.ts",
    "migration:down": "mikro-orm migration:down --config ./src/configs/mikro-orm.config.ts",
    "migration:pending": "mikro-orm migration:pending --config ./src/configs/mikro-orm.config.ts",
    "migration:fresh": "mikro-orm migration:fresh --config ./src/configs/mikro-orm.config.ts",
    "seed:create": "mikro-orm seeder:create --config ./src/configs/mikro-orm.config.ts",
    "seed:run": "mikro-orm seeder:run --config ./src/configs/mikro-orm.config.ts",
    "db:refresh": "mikro-orm migration:fresh --seed --config ./src/configs/mikro-orm.config.ts"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.4.11",
    "@mikro-orm/core": "^6.4.11",
    "@mikro-orm/migrations": "^6.4.11",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.4.11",
    "@mikro-orm/seeder": "^6.4.11",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@squareboat/nest-storage": "^0.1.7",
    "@types/cookie-parser": "^1.4.8",
    "@types/multer": "^1.4.12",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.44.4",
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.6.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.7",
    "hbs": "^4.2.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "luxon": "^3.6.0",
    "multer": "1.4.5-lts.2",
    "nanoid": "^5.1.5",
    "nestjs-i18n": "^10.5.1",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
