{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": ".swcrc"
      }
    },
    "typeCheck": true,
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "templates/**/*", "watchAssets": true },
      { "include": "modules/layout-checker/prompt.md", "watchAssets": true }
    ]
  }
}
